<!-- make targetApi to 14 while development to prevent errors. Change it back to 10 when done and clean the project -->
<resources xmlns:tools="http://schemas.android.com/tools" tools:targetApi="14" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Empty parent idiom -->
    <style name="NoParent" />

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.GrootFrameworkRoot.Light" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Theme.GrootFrameworkRoot.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="Theme.GrootFrameworkRoot.Light.DarkActionBar.LightMenu" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="GrootFrameworkRoot.Light.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid" />

    <style name="GrootFrameworkRoot.Light.DarkActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse" />

    <style name="GrootFrameworkRoot.Light.DarkActionBar.LightMenu" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse" />

    <style name="GrootFrameworkRoot.Light.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="GrootFrameworkRoot.Light.ActionBar.SubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

    <style name="GrootFrameworkRoot.Dark.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" />

    <style name="GrootFrameworkRoot.Dark.ActionBar.SubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse" />

    <!-- Overflow icon -->
    <style name="GrootFrameworkRoot.Dark.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow" />

    <style name="GrootFrameworkRoot.Light.ActionBar.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <!--item name="android:textAppearance">?attr/actionMenuTextColor ?android:attr/textAppearanceMediumInverse</item-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/action_bar_search_hint</item>
        <item name="android:textCursorDrawable">@drawable/action_bar_dark_cursor</item>
    </style>

    <!-- Application theme. -->
    <style name="Theme.GrootCodeBase.Light" parent="Theme.GrootFrameworkRoot.Light">
        <item name="drawerIcon">@drawable/ic_drawer_light</item>

        <!-- Other -->
        <item name="textHeaderMaxLines">@integer/text_header_max_lines</item>
        <item name="activatableItemBackground">@drawable/activatable_item_background</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/GrootCodeBase.Light.ActionBar</item>
        <item name="actionBarStyle">@style/GrootCodeBase.Light.ActionBar</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Theme.GrootCodeBase.Light.DarkActionBar" parent="Theme.GrootFrameworkRoot.Light.DarkActionBar">
        <item name="drawerIcon">@drawable/ic_drawer_dark</item>

        <!-- Other -->
        <item name="textHeaderMaxLines">@integer/text_header_max_lines</item>
        <item name="activatableItemBackground">@drawable/activatable_item_background</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/GrootCodeBase.Light.DarkActionBar</item>
        <item name="actionBarStyle">@style/GrootCodeBase.Light.DarkActionBar</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Theme.GrootCodeBase.Light.DarkActionBar.LightMenu" parent="Theme.GrootFrameworkRoot.Light.DarkActionBar.LightMenu">
        <item name="drawerIcon">@drawable/ic_drawer_white</item>

        <!-- home As Up -->
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>

        <!-- SearchView attributes -->
        <item name="searchViewTextField">@drawable/textfield_searchview_holo_dark</item>
        <item name="searchViewTextFieldRight">@drawable/textfield_searchview_right_holo_dark</item>
        <item name="searchViewCloseIcon">@drawable/abc_ic_clear</item>
        <item name="searchViewSearchIcon">@drawable/abc_ic_search</item>
        <item name="searchViewGoIcon">@drawable/abc_ic_go</item>
        <item name="searchViewVoiceIcon">@drawable/abc_ic_voice_search</item>
        <item name="searchViewEditQuery">@drawable/abc_ic_commit_search_api_holo_dark</item>
        <item name="searchViewEditQueryBackground">?attr/selectableItemBackground</item>
        <item name="searchViewAutoCompleteTextView">@style/GrootFrameworkRoot.Light.ActionBar.AutoCompleteTextView</item>
        <item name="actionModeShareDrawable">@drawable/abc_ic_menu_share_holo_dark</item>

        <!-- Overflow icon -->
        <item name="android:actionOverflowButtonStyle">@style/GrootFrameworkRoot.Dark.ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/GrootFrameworkRoot.Dark.ActionButton.Overflow</item>

        <!-- actionBarItemBackground -->
        <item name="android:actionBarItemBackground">@drawable/ab_selectable_background</item>
        <item name="actionBarItemBackground">@drawable/ab_selectable_background</item>
        
        <!-- Other -->
        <item name="textHeaderMaxLines">@integer/text_header_max_lines</item>
        <item name="activatableItemBackground">@drawable/activatable_item_background</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/GrootCodeBase.Light.DarkActionBar.LightMenu</item>
        <item name="actionBarStyle">@style/GrootCodeBase.Light.DarkActionBar.LightMenu</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Action bar -->
    <style name="Light.ActionBar.TitleText" parent="GrootFrameworkRoot.Light.ActionBar.TitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Light.ActionBar.SubtitleText" parent="GrootFrameworkRoot.Light.ActionBar.SubtitleText">
    </style>

    <style name="Dark.ActionBar.TitleText" parent="GrootFrameworkRoot.Dark.ActionBar.TitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dark.ActionBar.SubtitleText" parent="GrootFrameworkRoot.Dark.ActionBar.SubtitleText">
    </style>

    <style name="GrootCodeBase.Light.ActionBar" parent="GrootFrameworkRoot.Light.ActionBar">
        <!--item name="android:background">?attr/actionBarItemBackground</item>
        <item name="background">?attr/actionBarItemBackground</item-->
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <!--item name="android:titleTextStyle">@style/GrootFrameworkRoot.Light.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/GrootFrameworkRoot.Light.ActionBar.TitleText</item>
        <item name="android:subtitleTextStyle">@style/GrootFrameworkRoot.Light.ActionBar.SubtitleText</item>
        <item name="subtitleTextStyle">@style/GrootFrameworkRoot.Light.ActionBar.SubtitleText</item-->
    </style>

    <style name="GrootCodeBase.Light.DarkActionBar" parent="GrootFrameworkRoot.Light.DarkActionBar">
        <!--item name="android:background">@drawable/action_bar_bg</item>
        <item name="background">@drawable/action_bar_bg</item-->
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <!--item name="android:titleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.TitleText</item>
        <item name="android:subtitleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.SubtitleText</item>
        <item name="subtitleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.SubtitleText</item-->
    </style>

    <style name="GrootCodeBase.Light.DarkActionBar.LightMenu" parent="GrootFrameworkRoot.Light.DarkActionBar.LightMenu">
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="background">@drawable/action_bar_bg</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.TitleText</item>
        <item name="android:subtitleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.SubtitleText</item>
        <item name="subtitleTextStyle">@style/GrootFrameworkRoot.Dark.ActionBar.SubtitleText</item>
    </style>
    
    <!-- List views and list items -->
    <style name="ListItemContainerBase">
        <item name="android:background">@drawable/activatable_item_background</item>
        <item name="android:minHeight">?android:listPreferredItemHeight</item>
    </style>

    <style name="SideMenuText" parent="ListItemContainerBase">
        <item name="android:textSize">21.0sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SideMenuSeparator">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/accent_grey_bottom_border</item>
    </style>
</resources>
